<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="320.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group2_comp228lab5.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="txtGameId" />
   <TextField fx:id="txtGameTitle" />
   <Button fx:id="addGame" mnemonicParsing="false" onAction="#onSubmitGame" text="Add" />
   <TableView fx:id="tableGame" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="colGameId" prefWidth="75.0" text="C1" />
       <TableColumn fx:id="colGameTitle" prefWidth="75.0" text="C2" />
     </columns>
   </TableView>
   <Button fx:id="deleteGame" mnemonicParsing="false" onAction="#onDeleteGame" text="Delete" />
</VBox>
